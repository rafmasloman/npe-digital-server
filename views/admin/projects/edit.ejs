<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs%>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Projects Manage</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right mr-3">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item">
              <a href="/projects">Projects</a>
            </li>
            <li class="breadcrumb-item">Edit Project</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- Form -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Projects</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/projects/edit/<%= project.id %>?_method=PUT" method="post" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <label for="title">Judul Project</label>
                  <input
                    type="text"
                    name="title"
                    value="<%= project.title %>"
                    class="form-control"
                    id="title"
                    placeholder="Masukkan Judul Projects"
                  />
                </div>
                <div class="form-group">
                    <label for="year">Tahun Project dibuat</label>
                    <input
                      type="number"
                      name="year"
                      value="<%= project.year %>"
                      class="form-control"
                      id="year"
                      placeholder="Masukkan Tahun Projects"
                    />
                  </div>



                  <div class="form-group">
                    <label for="description">Deskripsi Project</label>
                    <input
                      type="text"
                      name="description"
                      value="<%= project.description %>"
                      class="form-control"
                      id="description"
                      placeholder="Masukkan Deskripsi Project"
                    />
                  </div>

                  <div class="form-group">
                    <label for="urlProject">URL Project</label>
                    <input
                      type="text"
                      name="urlProject"
                      value="<%= project.urlProject %>"
                      class="form-control"
                      id="urlProject"
                      placeholder="Masukkan URL Project"
                    />
                  </div>

                <div class="form-group">
                  <label>Category</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="category"
                    required
                  >
                    <option selected="selected">Pilih Jenis Role</option>
                    <% categories.forEach(category=>{ %>
                      <option value="<%= category._id %>" 
                      <% if(category._id.toString()===project?.category?._id.toString()) { %>
                        selected
                        <% }%> 
                        >
                          <%= category.name %>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="image">Gambar</label>
                  <input type="file" name="thumbnail" class="form-control" id="image" placeholder="Masukan gambar">
                  <br>
                  <img id="perview" alt="test"
                    src="http://localhost:3000/uploads/projects/<%= project.thumbnail %>" class="img-rounded" style="width: 150px; height: 150px;">
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

