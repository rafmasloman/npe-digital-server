<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/teams">Teams Member</a></li>
            <li class="breadcrumb-item active">Tambah Team Member</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form manajemen team member</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/teams/create"
              method="post"
              enctype="multipart/form-data"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="name"> Nama Member Team </label>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="name"
                    placeholder="Masukan nama member team"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Role</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="role"
                    required
                  >
                    <option selected="selected">Pilih Jenis Role</option>
                    <% roles.forEach(role=>{ %>
                    <option value="<%= role._id %>"><%= role.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="image">Gambar</label>
                  <input
                    type="file"
                    name="image"
                    class="form-control"
                    id="image"
                    placeholder="Masukan gambar"
                    required
                  />
                  <br />
                  <img src="" id="perview" />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/jsCDN.ejs %>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $('#perview').attr('src', e.target.result);
        $('#perview').attr('width', '25%');
        $('#perview').attr('height', '20%');
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $('#image').change(function () {
    readURL(this);
  });
</script>
