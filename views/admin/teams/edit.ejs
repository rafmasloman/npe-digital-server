<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs%>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Teams Manage</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right mr-3">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item">
              <a href="/projects">Teams</a>
            </li>
            <li class="breadcrumb-item">Edit Teams</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- Form -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Team Member</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/teams/edit/<%= team.id %>?_method=PUT" method="post" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Team Member</label>
                  <input
                    type="text"
                    name="name"
                    value="<%= team.name %>"
                    class="form-control"
                    id="name"
                    placeholder="Masukkan Nama Teams"
                  />
                </div>
                <div class="form-group">
                  <label>Role</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="role"
                    required
                  >
                    <option selected="selected">Pilih Jenis Role</option>
                    <% roles.forEach(role=>{ %>
                      <option value="<%= role._id %>" 
                      <% if(role._id.toString()===team?.role?._id.toString()) { %>
                        selected
                        <% }%> 
                        >
                          <%= role.name %>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="image">Gambar</label>
                  <input type="file" name="image" class="form-control" id="image" placeholder="Masukan gambar">
                  <br>
                  <img id="perview" alt="test"
                    src="http://localhost:8000/uploads/teams/<%= team.image %>" class="img-rounded" style="width: 150px; height: 150px;">
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

